        <RectangleGeometry Rect="8,8,8,6"/>
        <PathFigure StartPoint="10,10" IsClosed="False">
            <LineSegment Point="14,10"/>
        </PathFigure>
        <PathFigure StartPoint="10,12" IsClosed="False">
            <LineSegment Point="14,12"/>
