    <!-- =============================================================== -->
    <!--                    HOLOGRAPHIC GLOW EFFECTS                   -->
    <!-- =============================================================== -->

    <!-- Glow Intensity Levels -->
    <DropShadowEffect x:Key="GlyphGlow_Soft" 
                      Color="{StaticResource ElectricBlue_Core}" 
                      BlurRadius="4" 
                      ShadowDepth="0" 
                      Opacity="0.4"/>

    <DropShadowEffect x:Key="GlyphGlow_Medium" 
                      Color="{StaticResource ElectricBlue_Core}" 
                      BlurRadius="8" 
                      ShadowDepth="0" 
                      Opacity="0.6"/>

    <DropShadowEffect x:Key="GlyphGlow_Strong" 
                      Color="{StaticResource ElectricBlue_Core}" 
                      BlurRadius="12" 
                      ShadowDepth="0" 
                      Opacity="0.8"/>

    <!-- Specialized Glow Colors -->
    <DropShadowEffect x:Key="GlyphGlow_Warning" 
                      Color="{StaticResource EVEWarning_Orange}" 
                      BlurRadius="8" 
                      ShadowDepth="0" 
                      Opacity="0.7"/>

    <DropShadowEffect x:Key="GlyphGlow_Success" 
                      Color="{StaticResource EVE_Success}" 
                      BlurRadius="8" 
                      ShadowDepth="0" 
                      Opacity="0.7"/>

    <DropShadowEffect x:Key="GlyphGlow_Error" 
                      Color="{StaticResource EVEAlert_Red}" 
                      BlurRadius="8" 
                      ShadowDepth="0" 
                      Opacity="0.7"/>

    <DropShadowEffect x:Key="GlyphGlow_Gold" 
                      Color="{StaticResource EVEGold_Core}" 
                      BlurRadius="8" 
                      ShadowDepth="0" 
                      Opacity="0.6"/>

    <!-- =============================================================== -->
    <!--                    GLYPH ANIMATION RESOURCES                  -->
    <!-- =============================================================== -->

    <!-- Pulse Animation -->
    <Storyboard x:Key="GlyphPulse" RepeatBehavior="Forever" AutoReverse="True">
        <DoubleAnimation Storyboard.TargetProperty="(Effect).Opacity"
                        From="0.4" To="1.0" Duration="0:0:1.5">
            <DoubleAnimation.EasingFunction>
                <SineEase EasingMode="EaseInOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>

    <!-- Activation Flash -->
    <Storyboard x:Key="GlyphActivation">
        <DoubleAnimation Storyboard.TargetProperty="(Effect).Opacity"
                        From="0.2" To="1.0" Duration="0:0:0.2">
            <DoubleAnimation.EasingFunction>
                <CubicEase EasingMode="EaseOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                        From="0.9" To="1.0" Duration="0:0:0.15">
            <DoubleAnimation.EasingFunction>
                <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                        From="0.9" To="1.0" Duration="0:0:0.15">
            <DoubleAnimation.EasingFunction>
                <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>

    <!-- Hover Glow Increase -->
    <Storyboard x:Key="GlyphHoverIn">
        <DoubleAnimation Storyboard.TargetProperty="(Effect).BlurRadius"
                        To="12" Duration="0:0:0.2">
            <DoubleAnimation.EasingFunction>
                <CubicEase EasingMode="EaseOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetProperty="(Effect).Opacity"
                        To="0.8" Duration="0:0:0.2">
            <DoubleAnimation.EasingFunction>
                <CubicEase EasingMode="EaseOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>

    <!-- Hover Glow Decrease -->
    <Storyboard x:Key="GlyphHoverOut">
        <DoubleAnimation Storyboard.TargetProperty="(Effect).BlurRadius"
                        To="8" Duration="0:0:0.3">
            <DoubleAnimation.EasingFunction>
                <CubicEase EasingMode="EaseInOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetProperty="(Effect).Opacity"
                        To="0.6" Duration="0:0:0.3">
            <DoubleAnimation.EasingFunction>
                <CubicEase EasingMode="EaseInOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>

    <!-- =============================================================== -->
    <!--                      GLYPH BASE STYLES                        -->
    <!-- =============================================================== -->

    <!-- Base Holographic Glyph Style -->
    <Style x:Key="HolographicGlyph_Base" TargetType="Path">
        <Setter Property="Stroke" Value="{StaticResource ElectricBlue_CoreBrush}"/>
        <Setter Property="StrokeThickness" Value="2"/>
        <Setter Property="Fill" Value="Transparent"/>
        <Setter Property="Effect" Value="{StaticResource GlyphGlow_Medium}"/>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <ScaleTransform ScaleX="1" ScaleY="1"/>
            </Setter.Value>
        </Setter>
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Trigger.EnterActions>
                    <BeginStoryboard Storyboard="{StaticResource GlyphHoverIn}"/>
                </Trigger.EnterActions>
                <Trigger.ExitActions>
                    <BeginStoryboard Storyboard="{StaticResource GlyphHoverOut}"/>
                </Trigger.ExitActions>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Interactive Button Glyph Style -->
    <Style x:Key="HolographicGlyph_Button" TargetType="Path" BasedOn="{StaticResource HolographicGlyph_Base}">
        <Setter Property="Cursor" Value="Hand"/>
        <Style.Triggers>
            <EventTrigger RoutedEvent="MouseLeftButtonDown">
                <BeginStoryboard Storyboard="{StaticResource GlyphActivation}"/>
            </EventTrigger>
        </Style.Triggers>
    </Style>

    <!-- Status Indicator Glyph Style -->
    <Style x:Key="HolographicGlyph_Status" TargetType="Path" BasedOn="{StaticResource HolographicGlyph_Base}">
        <Setter Property="StrokeThickness" Value="1.5"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsActive}" Value="True">
                <DataTrigger.EnterActions>
                    <BeginStoryboard Storyboard="{StaticResource GlyphPulse}"/>
                </DataTrigger.EnterActions>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <!-- Navigation Glyph Style -->
    <Style x:Key="HolographicGlyph_Navigation" TargetType="Path" BasedOn="{StaticResource HolographicGlyph_Button}">
        <Setter Property="Stroke" Value="{StaticResource ElectricBlue_SoftBrush}"/>
        <Setter Property="Effect" Value="{StaticResource GlyphGlow_Soft}"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                <Setter Property="Stroke" Value="{StaticResource ElectricBlue_CoreBrush}"/>
                <Setter Property="Effect" Value="{StaticResource GlyphGlow_Strong}"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <!-- Warning Glyph Style -->
    <Style x:Key="HolographicGlyph_Warning" TargetType="Path" BasedOn="{StaticResource HolographicGlyph_Base}">
        <Setter Property="Stroke" Value="{StaticResource EVEWarning_OrangeBrush}"/>
        <Setter Property="Effect" Value="{StaticResource GlyphGlow_Warning}"/>
    </Style>

    <!-- Success Glyph Style -->
    <Style x:Key="HolographicGlyph_Success" TargetType="Path" BasedOn="{StaticResource HolographicGlyph_Base}">
        <Setter Property="Stroke" Value="{StaticResource EVE_SuccessBrush}"/>
        <Setter Property="Effect" Value="{StaticResource GlyphGlow_Success}"/>
    </Style>

    <!-- Error Glyph Style -->
    <Style x:Key="HolographicGlyph_Error" TargetType="Path" BasedOn="{StaticResource HolographicGlyph_Base}">
        <Setter Property="Stroke" Value="{StaticResource EVEAlert_RedBrush}"/>
        <Setter Property="Effect" Value="{StaticResource GlyphGlow_Error}"/>
    </Style>

    <!-- Corporation/Premium Glyph Style -->
    <Style x:Key="HolographicGlyph_Premium" TargetType="Path" BasedOn="{StaticResource HolographicGlyph_Base}">
        <Setter Property="Stroke" Value="{StaticResource EVEGold_CoreBrush}"/>
        <Setter Property="Effect" Value="{StaticResource GlyphGlow_Gold}"/>
    </Style>

    <!-- =============================================================== -->
    <!--                     UTILITY GLYPH CONTAINERS                  -->
    <!-- =============================================================== -->

    <!-- Scalable Glyph Container -->
    <Style x:Key="GlyphContainer_Small" TargetType="Viewbox">
        <Setter Property="Width" Value="16"/>
        <Setter Property="Height" Value="16"/>
        <Setter Property="Stretch" Value="Uniform"/>
    </Style>

    <Style x:Key="GlyphContainer_Medium" TargetType="Viewbox">
        <Setter Property="Width" Value="24"/>
        <Setter Property="Height" Value="24"/>
        <Setter Property="Stretch" Value="Uniform"/>
    </Style>

    <Style x:Key="GlyphContainer_Large" TargetType="Viewbox">
        <Setter Property="Width" Value="32"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="Stretch" Value="Uniform"/>
    </Style>

    <Style x:Key="GlyphContainer_XLarge" TargetType="Viewbox">
        <Setter Property="Width" Value="48"/>
        <Setter Property="Height" Value="48"/>
        <Setter Property="Stretch" Value="Uniform"/>
    </Style>

</ResourceDictionary>