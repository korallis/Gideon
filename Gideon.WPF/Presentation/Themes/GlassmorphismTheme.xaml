<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ================================= -->
    <!--      GLASSMORPHISM MATERIALS      -->
    <!-- ================================= -->
    
    <!-- Base Glass Materials -->
    <SolidColorBrush x:Key="GlassUltraLight" Color="#08FFFFFF" />
    <SolidColorBrush x:Key="GlassLight" Color="#15FFFFFF" />
    <SolidColorBrush x:Key="GlassMedium" Color="#25FFFFFF" />
    <SolidColorBrush x:Key="GlassDark" Color="#35FFFFFF" />
    <SolidColorBrush x:Key="GlassUltraDark" Color="#45FFFFFF" />
    
    <!-- Interactive Glass States -->
    <SolidColorBrush x:Key="GlassHover" Color="#30FFFFFF" />
    <SolidColorBrush x:Key="GlassActive" Color="#40FFFFFF" />
    <SolidColorBrush x:Key="GlassSelected" Color="#50FFFFFF" />
    <SolidColorBrush x:Key="GlassDisabled" Color="#10FFFFFF" />
    
    <!-- Colored Glass Variants -->
    <SolidColorBrush x:Key="GlassCyan" Color="#2000D4FF" />
    <SolidColorBrush x:Key="GlassGold" Color="#20FFD700" />
    <SolidColorBrush x:Key="GlassRed" Color="#20FF453A" />
    <SolidColorBrush x:Key="GlassGreen" Color="#2030D158" />
    <SolidColorBrush x:Key="GlassOrange" Color="#20FF9F0A" />
    
    <!-- ================================= -->
    <!--        DEPTH SHADOW EFFECTS       -->
    <!-- ================================= -->
    
    <!-- Ambient Shadows (soft, diffused) -->
    <DropShadowEffect x:Key="AmbientShadow1" 
                      Color="#FF000000" 
                      BlurRadius="6" 
                      ShadowDepth="1" 
                      Opacity="0.08" 
                      Direction="270" />
    
    <DropShadowEffect x:Key="AmbientShadow2" 
                      Color="#FF000000" 
                      BlurRadius="12" 
                      ShadowDepth="2" 
                      Opacity="0.12" 
                      Direction="270" />
    
    <DropShadowEffect x:Key="AmbientShadow3" 
                      Color="#FF000000" 
                      BlurRadius="20" 
                      ShadowDepth="4" 
                      Opacity="0.15" 
                      Direction="270" />
    
    <DropShadowEffect x:Key="AmbientShadow4" 
                      Color="#FF000000" 
                      BlurRadius="32" 
                      ShadowDepth="8" 
                      Opacity="0.18" 
                      Direction="270" />
    
    <!-- Direct Shadows (sharp, focused) -->
    <DropShadowEffect x:Key="DirectShadow1" 
                      Color="#FF000000" 
                      BlurRadius="2" 
                      ShadowDepth="1" 
                      Opacity="0.15" 
                      Direction="315" />
    
    <DropShadowEffect x:Key="DirectShadow2" 
                      Color="#FF000000" 
                      BlurRadius="4" 
                      ShadowDepth="2" 
                      Opacity="0.20" 
                      Direction="315" />
    
    <DropShadowEffect x:Key="DirectShadow3" 
                      Color="#FF000000" 
                      BlurRadius="8" 
                      ShadowDepth="4" 
                      Opacity="0.25" 
                      Direction="315" />
    
    <DropShadowEffect x:Key="DirectShadow4" 
                      Color="#FF000000" 
                      BlurRadius="16" 
                      ShadowDepth="8" 
                      Opacity="0.30" 
                      Direction="315" />
    
    <!-- ================================= -->
    <!--      HOLOGRAPHIC GLOW EFFECTS     -->
    <!-- ================================= -->
    
    <!-- Cyan Holographic Glows -->
    <DropShadowEffect x:Key="CyanGlowSoft" 
                      Color="#FF00D4FF" 
                      BlurRadius="8" 
                      ShadowDepth="0" 
                      Opacity="0.4" />
    
    <DropShadowEffect x:Key="CyanGlowMedium" 
                      Color="#FF00D4FF" 
                      BlurRadius="12" 
                      ShadowDepth="0" 
                      Opacity="0.6" />
    
    <DropShadowEffect x:Key="CyanGlowStrong" 
                      Color="#FF00D4FF" 
                      BlurRadius="16" 
                      ShadowDepth="0" 
                      Opacity="0.8" />
    
    <DropShadowEffect x:Key="CyanGlowIntense" 
                      Color="#FF00D4FF" 
                      BlurRadius="24" 
                      ShadowDepth="0" 
                      Opacity="1.0" />
    
    <!-- Gold EVE Glows -->
    <DropShadowEffect x:Key="GoldGlowSoft" 
                      Color="#FFFFD700" 
                      BlurRadius="6" 
                      ShadowDepth="0" 
                      Opacity="0.3" />
    
    <DropShadowEffect x:Key="GoldGlowMedium" 
                      Color="#FFFFD700" 
                      BlurRadius="10" 
                      ShadowDepth="0" 
                      Opacity="0.5" />
    
    <DropShadowEffect x:Key="GoldGlowStrong" 
                      Color="#FFFFD700" 
                      BlurRadius="14" 
                      ShadowDepth="0" 
                      Opacity="0.7" />
    
    <!-- ================================= -->
    <!--         BLUR EFFECTS              -->
    <!-- ================================= -->
    
    <BlurEffect x:Key="BackgroundBlurLight" Radius="10" />
    <BlurEffect x:Key="BackgroundBlurMedium" Radius="20" />
    <BlurEffect x:Key="BackgroundBlurHeavy" Radius="35" />
    <BlurEffect x:Key="BackgroundBlurExtreme" Radius="50" />
    
    <!-- ================================= -->
    <!--     HOLOGRAPHIC GRADIENTS         -->
    <!-- ================================= -->
    
    <!-- Cyan Holographic Gradient -->
    <LinearGradientBrush x:Key="HoloCyanGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FF00D4FF" Offset="0" />
        <GradientStop Color="#FF0078D4" Offset="0.5" />
        <GradientStop Color="#FF004080" Offset="1" />
    </LinearGradientBrush>
    
    <!-- EVE Gold Gradient -->
    <LinearGradientBrush x:Key="EVEGoldGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FFFFD700" Offset="0" />
        <GradientStop Color="#FFFF8800" Offset="0.5" />
        <GradientStop Color="#FFCC6600" Offset="1" />
    </LinearGradientBrush>
    
    <!-- Animated Holographic Gradient -->
    <LinearGradientBrush x:Key="AnimatedHoloGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FF00D4FF" Offset="0" />
        <GradientStop Color="#FF0078D4" Offset="0.3" />
        <GradientStop Color="#FF004080" Offset="0.6" />
        <GradientStop Color="#FF00D4FF" Offset="1" />
    </LinearGradientBrush>
    
    <!-- Radial Holographic Gradient -->
    <RadialGradientBrush x:Key="RadialHoloGradient" Center="0.5,0.5" RadiusX="1" RadiusY="1">
        <GradientStop Color="#FF00D4FF" Offset="0" />
        <GradientStop Color="#FF0078D4" Offset="0.7" />
        <GradientStop Color="#FF001A33" Offset="1" />
    </RadialGradientBrush>
    
    <!-- ================================= -->
    <!--      GLASSMORPHISM TEMPLATES      -->
    <!-- ================================= -->
    
    <!-- Ultra Light Glass Panel -->
    <Style x:Key="GlassUltraLightPanel" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{StaticResource GlassUltraLight}" />
        <Setter Property="BorderBrush" Value="{StaticResource HoloCyanGradient}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Effect" Value="{StaticResource AmbientShadow1}" />
        <Setter Property="UseLayoutRounding" Value="True" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
    </Style>
    
    <!-- Light Glass Panel -->
    <Style x:Key="GlassLightPanel" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{StaticResource GlassLight}" />
        <Setter Property="BorderBrush" Value="{StaticResource HoloCyanGradient}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Effect" Value="{StaticResource AmbientShadow2}" />
        <Setter Property="UseLayoutRounding" Value="True" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource GlassHover}" />
                <Setter Property="Effect" Value="{StaticResource CyanGlowSoft}" />
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Medium Glass Panel -->
    <Style x:Key="GlassMediumPanel" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{StaticResource GlassMedium}" />
        <Setter Property="BorderBrush" Value="{StaticResource HoloCyanGradient}" />
        <Setter Property="BorderThickness" Value="1.5" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Effect" Value="{StaticResource AmbientShadow3}" />
        <Setter Property="UseLayoutRounding" Value="True" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource GlassHover}" />
                <Setter Property="Effect" Value="{StaticResource CyanGlowMedium}" />
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Dark Glass Panel -->
    <Style x:Key="GlassDarkPanel" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{StaticResource GlassDark}" />
        <Setter Property="BorderBrush" Value="{StaticResource HoloCyanGradient}" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Effect" Value="{StaticResource AmbientShadow4}" />
        <Setter Property="UseLayoutRounding" Value="True" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource GlassHover}" />
                <Setter Property="Effect" Value="{StaticResource CyanGlowStrong}" />
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- EVE-styled Glass Panel -->
    <Style x:Key="GlassEVEPanel" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{StaticResource GlassLight}" />
        <Setter Property="BorderBrush" Value="{StaticResource EVEGoldGradient}" />
        <Setter Property="BorderThickness" Value="1.5" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Effect" Value="{StaticResource AmbientShadow2}" />
        <Setter Property="UseLayoutRounding" Value="True" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource GlassGold}" />
                <Setter Property="Effect" Value="{StaticResource GoldGlowMedium}" />
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- ================================= -->
    <!--      INTERACTIVE GLASS CARDS      -->
    <!-- ================================= -->
    
    <!-- Standard Interactive Card -->
    <Style x:Key="InteractiveGlassCard" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{StaticResource GlassLight}" />
        <Setter Property="BorderBrush" Value="{StaticResource HoloCyanGradient}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Effect" Value="{StaticResource AmbientShadow2}" />
        <Setter Property="UseLayoutRounding" Value="True" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Cursor" Value="Hand" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource GlassHover}" />
                <Setter Property="Effect" Value="{StaticResource CyanGlowMedium}" />
            </Trigger>
            <EventTrigger RoutedEvent="MouseEnter">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                       To="1.02" Duration="0:0:0.2">
                            <DoubleAnimation.EasingFunction>
                                <CubicEase EasingMode="EaseOut"/>
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                       To="1.02" Duration="0:0:0.2">
                            <DoubleAnimation.EasingFunction>
                                <CubicEase EasingMode="EaseOut"/>
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            <EventTrigger RoutedEvent="MouseLeave">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                       To="1.0" Duration="0:0:0.2">
                            <DoubleAnimation.EasingFunction>
                                <CubicEase EasingMode="EaseOut"/>
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                       To="1.0" Duration="0:0:0.2">
                            <DoubleAnimation.EasingFunction>
                                <CubicEase EasingMode="EaseOut"/>
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Style.Triggers>
    </Style>
    
    <!-- ================================= -->
    <!--     HOLOGRAPHIC CORNER ACCENTS    -->
    <!-- ================================= -->
    
    <!-- Corner Accent Template -->
    <ControlTemplate x:Key="HolographicCornerAccents" TargetType="{x:Type ContentControl}">
        <Grid>
            <ContentPresenter />
            <Canvas>
                <!-- Top-left corner -->
                <Path Canvas.Left="8" Canvas.Top="8"
                      Data="M0,16 L0,0 L16,0"
                      Stroke="{StaticResource HoloCyanGradient}"
                      StrokeThickness="2"
                      Opacity="0.6"
                      Effect="{StaticResource CyanGlowSoft}" />
                
                <!-- Top-right corner -->
                <Path Canvas.Right="8" Canvas.Top="8"
                      Data="M0,0 L16,0 L16,16"
                      Stroke="{StaticResource HoloCyanGradient}"
                      StrokeThickness="2"
                      Opacity="0.6"
                      Effect="{StaticResource CyanGlowSoft}" />
                
                <!-- Bottom-left corner -->
                <Path Canvas.Left="8" Canvas.Bottom="8"
                      Data="M0,0 L0,16 L16,16"
                      Stroke="{StaticResource HoloCyanGradient}"
                      StrokeThickness="2"
                      Opacity="0.6"
                      Effect="{StaticResource CyanGlowSoft}" />
                
                <!-- Bottom-right corner -->
                <Path Canvas.Right="8" Canvas.Bottom="8"
                      Data="M16,0 L16,16 L0,16"
                      Stroke="{StaticResource HoloCyanGradient}"
                      StrokeThickness="2"
                      Opacity="0.6"
                      Effect="{StaticResource CyanGlowSoft}" />
            </Canvas>
        </Grid>
    </ControlTemplate>
    
    <!-- ================================= -->
    <!--        ANIMATION RESOURCES        -->
    <!-- ================================= -->
    
    <!-- Fade In Animation -->
    <Storyboard x:Key="GlassFadeInStoryboard">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        From="0" To="1" Duration="0:0:0.4">
            <DoubleAnimation.EasingFunction>
                <CubicEase EasingMode="EaseOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                        From="0.9" To="1" Duration="0:0:0.4">
            <DoubleAnimation.EasingFunction>
                <CubicEase EasingMode="EaseOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                        From="0.9" To="1" Duration="0:0:0.4">
            <DoubleAnimation.EasingFunction>
                <CubicEase EasingMode="EaseOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>
    
    <!-- Pulse Glow Animation -->
    <Storyboard x:Key="PulseGlowStoryboard" RepeatBehavior="Forever" AutoReverse="True">
        <DoubleAnimation Storyboard.TargetProperty="(Effect).Opacity"
                        From="0.6" To="1.0" Duration="0:0:2">
            <DoubleAnimation.EasingFunction>
                <SineEase EasingMode="EaseInOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>
    
    <!-- Shimmer Effect Animation -->
    <Storyboard x:Key="ShimmerStoryboard" RepeatBehavior="Forever">
        <DoubleAnimation Storyboard.TargetProperty="(LinearGradientBrush.Transform).(TranslateTransform.X)"
                        From="-100" To="100" Duration="0:0:3">
            <DoubleAnimation.EasingFunction>
                <SineEase EasingMode="EaseInOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>

</ResourceDictionary>