<?xml version="1.0" encoding="utf-8"?>
<assembly manifestVersion="1.0" xmlns="urn:schemas-microsoft-com:asm.v1">
  <assemblyIdentity version="2.0.0.0" name="Gideon.WPF"/>
  
  <!-- Windows Version Compatibility -->
  <compatibility xmlns="urn:schemas-microsoft-com:compatibility.v1">
    <application>
      <!-- Windows 11 22H2 and later -->
      <supportedOS Id="{8e0f7a12-bfb3-4fe8-b9a5-48fd50a15a9a}" />
      <!-- Windows 10 version 1903+ -->
      <supportedOS Id="{8e0f7a12-bfb3-4fe8-b9a5-48fd50a15a9a}" />
    </application>
  </compatibility>

  <!-- Windows 11 Application Settings -->
  <application xmlns="urn:schemas-microsoft-com:asm.v3">
    <windowsSettings>
      <!-- High DPI Support -->
      <dpiAware xmlns="http://schemas.microsoft.com/SMI/2005/WindowsSettings">true/PM</dpiAware>
      <dpiAwareness xmlns="http://schemas.microsoft.com/SMI/2016/WindowsSettings">PerMonitorV2</dpiAwareness>
      
      <!-- Windows 11 Features -->
      <longPathAware xmlns="http://schemas.microsoft.com/SMI/2016/WindowsSettings">true</longPathAware>
      <printerDriverIsolation xmlns="http://schemas.microsoft.com/SMI/2011/WindowsSettings">true</printerDriverIsolation>
      <ultraHighResolutionScrolling xmlns="http://schemas.microsoft.com/SMI/2013/WindowsSettings">true</ultraHighResolutionScrolling>
      
      <!-- Windows 10/11 Fluent Design Support -->
      <heapType xmlns="http://schemas.microsoft.com/SMI/2020/WindowsSettings">SegmentHeap</heapType>
      
      <!-- Windows 11 Mica and Theme Support -->
      <useMicaAltFrameColor xmlns="http://schemas.microsoft.com/SMI/2022/WindowsSettings">true</useMicaAltFrameColor>
    </windowsSettings>
  </application>

  <!-- Modern Windows Controls -->
  <dependency>
    <dependentAssembly>
      <assemblyIdentity type="win32" name="Microsoft.Windows.Common-Controls" version="6.0.0.0" processorArchitecture="*" publicKeyToken="6595b64144ccf1df" language="*" />
    </dependentAssembly>
  </dependency>

  <!-- Security -->
  <trustInfo xmlns="urn:schemas-microsoft-com:asm.v3">
    <security>
      <requestedPrivileges>
        <requestedExecutionLevel level="asInvoker" uiAccess="false" />
      </requestedPrivileges>
    </security>
  </trustInfo>

  <!-- Application Execution Properties -->
  <application xmlns="urn:schemas-microsoft-com:asm.v3">
    <windowsSettings>
      <!-- Command-line execution alias -->
      <appExecutionAlias xmlns="http://schemas.microsoft.com/SMI/2019/WindowsSettings">
        <executionAlias alias="gideon.exe" />
      </appExecutionAlias>
      
      <!-- Windows 11 Dark Mode Support -->
      <darkModeAware xmlns="http://schemas.microsoft.com/SMI/2019/WindowsSettings">true</darkModeAware>
      
      <!-- Windows 11 Rounded Corners -->
      <useWindowsRoundedCorners xmlns="http://schemas.microsoft.com/SMI/2022/WindowsSettings">true</useWindowsRoundedCorners>
    </windowsSettings>
  </application>
</assembly> 